div.homeContainer
  div.outside-box
    div.form-input
      h3 Create a Route
      form(ng-submit="vm.addRoute()")
        input(placeholder="enter route here" ng-model="vm.formInfo.route")
        button Add a Route
        div(ng-repeat="verb in vm.verbs")
          label
            input(type="checkbox"

              ng-click="vm.toggleRoute(verb)")
            {{ verb }}
          div(ng-show="!!(vm.formInfo.methods[verb] !== undefined)")
            div.form-group
              label Status code
                input.form-control(type="number"
                      ng-model="vm.formInfo.methods[verb].status")
            div.form-group
              label Headers
                textarea.form-control(rows="1"
                                      ng-model="vm.formInfo.methods[verb].headers")
            div.form-group
              label Response
                textarea.form-control(rows="3"
                                      ng-model="vm.formInfo.methods[verb].data")
    div.current-routes-list
      h3 Current Routes:
      div(ng-repeat="route in vm.routes" )
        div.routeInRoutes
          a(href="/routes/{{ route }}")
            {{ route }}

h1 {{ vm.formInfo.methods }}

