h1 Edit Route
form(name="editForm")
  h3 {{ vm.formInfo.route }}
  div.checkbox-inline
    label
      input(type="checkbox"
            ng-checked="vm.formInfo.persistence"
            ng-click="vm.togglePersistence()")
      {{ 'Persistent' }}

  div.persistent-data-display(ng-show="vm.formInfo.persistence")
    label Persistent data
    p {{ vm.formInfo.data.length === 0 ? 'No data' : vm.formInfo.data | json }}

    .alert.alert-info
    p Sort Type: {{ sortType }}
    p Sort Reverse: {{ sortReverse }}
    p Search Query: {{ searchUser }}
    form
      .form-group
        .input-group
          .input-group-addon
            i.fa.fa-search
          input.form-control(type='text', placeholder='Search Users', ng-model='searchUser')
    table.table.table-bordered.table-striped
      thead
        tr
          td
            a(href='#', ng-click="sortType = 'id'; sortReverse = !sortReverse")
              | ID 
              span.fa.fa-caret-down(ng-show="sortType == 'id' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'id' && sortReverse")
          td
            a(href='#', ng-click="sortType = 'name'; sortReverse = !sortReverse")
              | Name
              span.fa.fa-caret-down(ng-show="sortType == 'name' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'name' && sortReverse")
          td
            a(href='#', ng-click="sortType = 'email'; sortReverse = !sortReverse")
              | Email
              span.fa.fa-caret-down(ng-show="sortType == 'email' && !sortReverse")
              span.fa.fa-caret-up(ng-show="sortType == 'email' && sortReverse")
      tbody
        tr(ng-repeat='user in vm.formInfo.data | orderBy:sortType:sortReverse | filter:searchUser')
          td(ng-repeat='column in user') {{ column }}

  div.methods-selector.form-group(ng-hide="vm.formInfo.persistence")
    div.method.checkbox-inline(ng-repeat="method in vm.allMethods")
      label
        input(type="checkbox"
              ng-checked="!!vm.formInfo.methods[method]"
              ng-click="vm.toggleMethod(method)")
        {{ method }}

  div.method-body.form-group(ng-hide="vm.formInfo.persistence"
                             ng-repeat="method in vm.formInfo.methodKeys")
    label {{ method }}

    div.form-group
      label Status code
      input.form-control(type="number"
                         name="status"
                         ng-model="vm.formInfo.methods[method].status"
                         ng-pattern="/^(?!.*\/\/)[0-9][0-9]*$/"
                         ng-class="{ 'alert-danger' : editForm.response.$invalid && !editForm.response.$pristine }"
                         role="alert"
                         required)
    div.form-group
      label Headers
      textarea.form-control(rows="1"
                            ng-model="vm.formInfo.methods[method].headers")
    div.form-group
      label Response
      textarea.form-control(rows="3"
                            ng-model="vm.formInfo.methods[method].data"
                            name="response"
                            ng-class="{ 'alert-danger' : editForm.status.$invalid && !editForm.status.$pristine }"
                            role="alert"
                            required)

  div.business-logic.form-group(ng-show="vm.formInfo.persistence")
    label Business Logic
    textarea.form-control(rows="3"
                            ng-model="vm.formInfo.businessLogic")

  div.submit-area.form-group
    button.btn.btn-primary(ng-click="vm.updateRoute()" ng-disabled="editForm.$invalid") {{ vm.buttonStatus }}
    div.alert.alert-danger(ng-show="vm.errorMessage") {{ vm.errorMessage }}
